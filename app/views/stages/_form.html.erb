<%= form_with(model: stage) do |form| %>
  <% if stage.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(stage.errors.count, "error") %> prohibited this stage from being saved:</h2>

      <ul>
        <% stage.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :job_id %>
    <%= form.select :job_id, options_for_select(Job.all.map{ |j| [j.title,j.id]}) %>
  </div>

  <span class="pdf">
      <%= form.label :challenge_file,  "Upload a challenge file: "%>
      <%= form.file_field :challenge_file, accept: "application/pdf" %>
  </span>
  <br/>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
