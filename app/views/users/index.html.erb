<% provide(:title, 'All users') %>
<h1>All users</h1>

<%= paginate @users, window: 1 %>
<ul class="users">
  <% @users.each do |user| %>
    <li>
      <%= gravatar_for user, size: 50 %>
      <%= link_to user.name, user %>
      <% if current_user.admin? %>
      <button type="button" class="btn btn-success">
      <%= link_to 'Edit user', edit_user_path(user.id)%>
      <% end %>
      </button>
    </li>
  <% end %>
</ul>
<%= paginate @users, window: 1 %>