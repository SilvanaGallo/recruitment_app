
<% provide(:title, @job.title) %>
<div class="row">
    <section class="user_info">
        <h1>
            <%= @job.title %><br>
        </h1>
        <h2>
            <%= @job.description %>
        </h2>
      </h1>
    </section>
      <% if current_user.admin? %>
        <%#Manage jobs and applications%> 
        <%= link_to "Manage",  "#" , class: "btn btn-info" %>
    <% else %>
        <%#Could apply%> 
        <%= link_to "Apply now!",  "#" , class: "btn btn-success" %>
    <% end %>
</div>

