<%= form_with(model: @stage, local: false) do |f| %>
    <%= render 'shared/error_messages', object: f.object %>
    <div class="field">
        <%= f.text_field :name, placeholder: "Stage name" %>
    </div>
    <br/>
    
    <span class="pdf">
        <%= f.label :challenge_file,  "Upload a challenge file: "%>
        <%= f.file_field :challenge_file, accept: "application/pdf" %>
    </span>
    <br/>

    <%= f.submit "Add stage", class: "btn btn-success" %>
<% end %>