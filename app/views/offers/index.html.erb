<h1>Offers</h1>
<%if current_user.admin?%>
<table>
  <thead>
    <tr>
      <th>Content</th>
      <th>Candidate</th>
      <th>Job</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @offers.each do |offer| %>
      <tr>
        <td><%= offer.content %></td>
        <td><%= offer.user.name %></td>
        <td><%= offer.job.title %></td>
        <td><%= offer.status %></td>
        <td><%= link_to 'Show', offer %></td>
        <td><%= link_to 'Edit', edit_offer_path(offer) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%else%>
<table>
  <thead>
    <tr>
      <th>Job</th>
      <th>Status</th>
    </tr>
  </thead>

  <tbody>
    <% @current_user.offers.each do |offer| %>
      <tr>
        <td><%= link_to offer.job.title, offer_path(offer) %></td>
        
        <td><%= offer.status %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<%end%>
